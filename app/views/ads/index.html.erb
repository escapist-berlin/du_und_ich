    //   console.log("works");
    // // }
  }
  // Grid 2 View
  function gridView() {
    for (i = 0; i < elements.length; i++) {
      elements[i].style.width = "100%";
      elements[i].style.fontSize = "24px";
      elements[i].style.lineHeight = "32px";
      elements[i].style.columnCount = "2";
      elements[i].style.paddinRight = "0px";
      elements[i].style.columnRule = "0.5px solid";
      elements[i].style.breakBefore = "column";

    }
  }
// Grid 4 View
    function grid2View() {
    for (i = 0; i < elements.length; i++) {
      elements[i].style.width = "100%";
      elements[i].style.fontSize = "16px";
      elements[i].style.lineHeight = "24px";
      elements[i].style.columnCount = "4";
    }
  }
// Grid 6 View
   function grid4View() {
    for (i = 0; i < elements.length; i++) {
      elements[i].style.width = "100%";
      elements[i].style.fontSize = "12px";
      elements[i].style.lineHeight = "20px";
      elements[i].style.columnCount = "6";
    }
  }
</script>

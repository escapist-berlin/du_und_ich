<div data-refresh-content-target="content" class="container">
    <div id="col">
        <% @ads.each do |ad| %>
            <div class="adbody">
                <div class="column" style="margin-right: 0px; padding-right: 0px;
                                            padding-left: 0px;
                                            padding-top: 0px;
                                            padding-bottom: 0px;">
                  <%= ad.content %>
                </div>
            </div>
        <% end %>
    </div>
</div>

<script>
  // Get the elements with class=""
  const elements = document.getElementsByClassName("adbody");
  // Declare a loop variable
  let i;
 // List 1 View
  function listView() {
    for (i = 0; i < elements.length; i++) {
      elements[i].style.width = "100%";
      // elements.classList.toggle("grid2");
    }
    // let element = document.getElementsByClassName(".grid");
    // element.classList.toggle(".grid2")
    // let div = document.querySelector('.grid');
